<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ThirdFragment">

    <com.example.champernownecalculator.auxiliar.VerticalScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/fragment_three"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp">
                <TextView
                    android:id="@+id/section_label_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                    tools:layout_constraintLeft_creator="1"
                    tools:layout_constraintTop_creator="1"
                    />

                <Spinner
                    android:id="@+id/decrypt_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="10sp"
                    android:entries="@array/spinnerItems"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="14sp"
                    android:text="Key "
                    />

                <EditText
                    android:id="@+id/key_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="#F2F2F2"
                    android:hint="Key"
                    android:layout_marginRight="15dp"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    android:gravity="top|left"
                    android:layout_marginTop="15dp"
                    android:padding="14sp"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/decrypt_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="5"
                android:minLines="5"
                android:background="#F2F2F2"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:hint="Enter Your Message Here"
                android:gravity="top|left"
                android:layout_margin="15dp"
                android:padding="14sp"
                android:maxLines="6"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                />

            <Button
                android:id="@+id/decrypt_button"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText5"
                android:text="Decrypt"
                android:layout_margin="25dp"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:text="Result"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1"
                />


            <EditText
                android:id="@+id/result_decrypt_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:minLines="5"
                android:background="#9C9C9C"
                android:textSize="15dp"
                android:layout_centerInParent="true"
                android:editable="false"
                android:gravity="top|left"
                android:layout_margin="15dp"
                android:padding="14sp"
                android:maxLines="6"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                />

        </LinearLayout>
    </com.example.champernownecalculator.auxiliar.VerticalScrollview>

</androidx.constraintlayout.widget.ConstraintLayout>